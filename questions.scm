;; Returns a list of two-element lists
(define (enumerate lst)
  (define (helper n current lst)
    (if (null? lst)
      current
      (helper (+ n 1) (append current (list (cons n (list (car lst))))) (cdr lst))
    )
  )
  (helper 0 nil lst)
)

